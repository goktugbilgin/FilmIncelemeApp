@model FilmIncelemeApp.Models.Kategoriler

@{
    ViewData["Title"] = "Kategori Sil";
}

<h1>Kategori Sil</h1>

<div class="alert alert-danger">
    <h3>Bu kategoriyi silmek istediğinizden emin misiniz?</h3>
</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Kategori Adı:</dt>
            <dd class="col-sm-9">@Model.Ad</dd>
        </dl>
        
        @if (Model.Filmlers.Any())
        {
            <div class="alert alert-warning">
                <strong>Dikkat:</strong> Bu kategoride @Model.Filmlers.Count film bulunmaktadır. 
                Kategoriyi silerseniz, bu filmlerin kategori bilgisi silinecektir.
            </div>
        }
    </div>
</div>

<form asp-action="Delete" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Sil" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
</form> 
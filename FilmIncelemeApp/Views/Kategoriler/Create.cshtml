@model FilmIncelemeApp.Models.Kategoriler

@{
    ViewData["Title"] = "Yeni Kategori Ekle";
}

<h1><i class="fas fa-plus-circle text-success me-2"></i>Yeni Kategori Ekle</h1>

<div class="row">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="Ad" class="control-label fw-bold">Kategori Adı</label>
                        <input asp-for="Ad" class="form-control" placeholder="Kategori adını girin" />
                        <span asp-validation-for="Ad" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save me-1"></i>Kaydet
                        </button>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Ana Sayfaya Dön
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 
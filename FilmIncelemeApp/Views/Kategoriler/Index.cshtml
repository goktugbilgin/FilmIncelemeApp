@model IEnumerable<FilmIncelemeApp.Models.Kategoriler>

@{
    ViewData["Title"] = "Kategoriler";
}

<h1>Kategoriler</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Kategori Ekle</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Kategori Adı</th>
            <th>Film Sayısı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.Ad</td>
            <td>
                <span class="badge bg-info">@item.Filmlers.Count</span>
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detay</a>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Düzenle</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table> 
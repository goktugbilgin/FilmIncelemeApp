@model FilmIncelemeApp.Models.Yorumlar

@{
    ViewData["Title"] = "Yeni Yorum Ekle";
}

<h1><i class="fas fa-plus-circle text-info me-2"></i>Yeni Yorum Ekle</h1>

<div class="row">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="FilmId" class="control-label fw-bold">Film</label>
                        <select asp-for="FilmId" class="form-control" asp-items="ViewBag.FilmId">
                            <option value="">Film Seçin</option>
                        </select>
                        <span asp-validation-for="FilmId" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="YorumYapan" class="control-label fw-bold">Yorum Yapan</label>
                        <input asp-for="YorumYapan" class="form-control" placeholder="Adınızı girin" />
                        <span asp-validation-for="YorumYapan" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="Puan" class="control-label fw-bold">Puan</label>
                        <select asp-for="Puan" class="form-control">
                            <option value="">Puan Seçin</option>
                            <option value="1">1 - Çok Kötü</option>
                            <option value="2">2 - Kötü</option>
                            <option value="3">3 - Orta</option>
                            <option value="4">4 - İyi</option>
                            <option value="5">5 - Mükemmel</option>
                        </select>
                        <span asp-validation-for="Puan" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="YorumMetni" class="control-label fw-bold">Yorum</label>
                        <textarea asp-for="YorumMetni" class="form-control" rows="4" placeholder="Yorumunuzu yazın"></textarea>
                        <span asp-validation-for="YorumMetni" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <button type="submit" class="btn btn-info">
                            <i class="fas fa-save me-1"></i>Kaydet
                        </button>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Ana Sayfaya Dön
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 
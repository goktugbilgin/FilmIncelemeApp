@model FilmIncelemeApp.Models.Yorumlar

@{
    ViewData["Title"] = "Yorum Düzenle";
}

<h1>Yorum Düzenle</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            
            <div class="form-group mb-3">
                <label asp-for="FilmId" class="control-label">Film</label>
                <select asp-for="FilmId" class="form-control" asp-items="ViewBag.FilmId">
                    <option value="">Film Seçin</option>
                </select>
                <span asp-validation-for="FilmId" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="YorumYapan" class="control-label">Yorum Yapan</label>
                <input asp-for="YorumYapan" class="form-control" />
                <span asp-validation-for="YorumYapan" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Puan" class="control-label">Puan</label>
                <select asp-for="Puan" class="form-control">
                    <option value="">Puan Seçin</option>
                    <option value="1">1 - Çok Kötü</option>
                    <option value="2">2 - Kötü</option>
                    <option value="3">3 - Orta</option>
                    <option value="4">4 - İyi</option>
                    <option value="5">5 - Mükemmel</option>
                </select>
                <span asp-validation-for="Puan" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="YorumMetni" class="control-label">Yorum</label>
                <textarea asp-for="YorumMetni" class="form-control" rows="4"></textarea>
                <span asp-validation-for="YorumMetni" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Tarih" class="control-label">Tarih</label>
                <input asp-for="Tarih" class="form-control" type="datetime-local" />
                <span asp-validation-for="Tarih" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 
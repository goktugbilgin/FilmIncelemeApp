@model FilmIncelemeApp.Models.Filmler

@{
    ViewData["Title"] = "Film Sil";
}

<h1>Film Sil</h1>

<div class="alert alert-danger">
    <h3>Bu filmi silmek istediğinizden emin misiniz?</h3>
</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Başlık:</dt>
            <dd class="col-sm-9">@Model.Baslik</dd>
            
            <dt class="col-sm-3">Açıklama:</dt>
            <dd class="col-sm-9">@Model.Aciklama</dd>
            
            <dt class="col-sm-3">Yayın Yılı:</dt>
            <dd class="col-sm-9">@Model.Yayinyili</dd>
            
            <dt class="col-sm-3">Kategori:</dt>
            <dd class="col-sm-9">@Model.Kategori?.Ad</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Sil" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
</form> 
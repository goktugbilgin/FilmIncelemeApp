@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Filmler";
}

<h1>Filmler</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Film Ekle</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Başlık</th>
            <th>Açıklama</th>
            <th>Yayın Yılı</th>
            <th>Kategori</th>
            <th>Ortalama Puan</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.Film.Baslik</td>
            <td>@(item.Film.Aciklama?.Length > 50 ? item.Film.Aciklama.Substring(0, 50) + "..." : item.Film.Aciklama)</td>
            <td>@item.Film.Yayinyili</td>
            <td>@item.Film.Kategori?.Ad</td>
            <td>
                @if (item.OrtalamaPuan > 0)
                {
                    <span class="badge bg-success">@item.OrtalamaPuan.ToString("F1")</span>
                }
                else
                {
                    <span class="badge bg-secondary">Henüz puan yok</span>
                }
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Film.Id" class="btn btn-info btn-sm">Detay</a>
                <a asp-action="Edit" asp-route-id="@item.Film.Id" class="btn btn-warning btn-sm">Düzenle</a>
                <a asp-action="Delete" asp-route-id="@item.Film.Id" class="btn btn-danger btn-sm">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table> 